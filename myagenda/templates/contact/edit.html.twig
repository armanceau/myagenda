{# forms/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <h1>Ajouter une annonce </h1>

        {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Telephone'}}) }}
        </div>

        {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_end(form) }}
    </div>
</section>
        
{% endblock %}
