{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}
{% block stylesheets %}
<style>
    .footer{
        position: absolute;
        width: 100%;
        bottom: 0;
    }

    html{
        height: 100%;
        width: 100%;
    }

    body{
        height: 100%;
        width: 100%;
    }
</style>
{% endblock %}
{% block body %}
<section class="" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-6 mb-4 mb-lg-0">
          <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
              <div class="col-md-4 gradient-custom text-center text-white"
                style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                  alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                <h5 class="text-muted">{{contact.prenom}} <br>{{contact.nom}}</h5>
                <i class="far fa-edit mb-5"></i>
              </div>
              <div class="col-md-8">
                <div class="card-body p-4">
                  <h6>Informations</h6>
                  <hr class="mt-0 mb-4">
                  <div class="row pt-1">
                    <div class="col-6 mb-3">
                      <h6>Email</h6>
                      <p class="text-muted">{{contact.email}}</p>
                    </div>
                    <div class="col-6 mb-3">
                      <h6>Phone</h6>
                      <p class="text-muted">{{contact.telephone}}</p>
                    </div>
                  </div>
                  
                  <div class="d-flex gap-3 justify-content-start">
                    <a class="btn btn-outline-danger" href="{{ path('app_contact_delete', {id: contact.id}) }}" onclick="return confirm('Etes vous sur de vouloir supprimer ce contact ?')">
                        <i class="bi bi-trash"></i>
                    </a>                            
                    <a class="btn btn-outline-primary" href="{{ path('app_contact_edit', {id: contact.id}) }}">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
    
    
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
{% endblock %}
{% block footer %}
    <!-- Footer-->
    <footer class="py-5 bg-dark footer">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; myAgenda 2023</p></div>
    </footer>
{% endblock %}
